#class lwa open;

#alias {lingwu.start} {
    #map goto $lwroom; maphere; #var lwroomname $roomname;
    #map goto $bedroom; maphere; #var bedroomname $roomname;
    #map goto $kitchen; maphere; #var kitchenname $roomname;
    loadmap;
    #delay 1 {
        maphere;
        #if {$roomvnum != $lwroom} {
            #act {^$lwroomname -} {lwaa; #unact {^$$lwroomname -}};
            #map run {$lwroom} {0.2};
        };
        #else {
            lwaa;
        };
    };
};


#alias {lwaa} {lingwu $lwname 100;yun regenerate};
#alias {gosleep} {maphere; #map run $bedroom; #delay 2 sleep};

#act {你的内力不够。} {
   #echo {当前$lwname领悟进度:};
   skbrief $lwname;
   eat liang;
	 #delay 1 {drink jiudai;
  #delay 1 {sleep}}
};
#gag {^> $};
#gag {^$};

