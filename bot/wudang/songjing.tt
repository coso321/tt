#class songjing open;
#var {songjing.after-handler} {ask-quest};

#alias {songjing-start} {
    #var location %1;
    #var book %2;
    #regexp %3 {%!*·%!*·%*(%*)} {
        #var chapter &1;
        #var chapter.page &2;
    };
    getbook;
};


#alias getbook {
    #map run 复真观二层;
    jie $book; 
    #map run $location;
    findpage;
};
    
#alias findpage {
    #class findpage open;
        #var page 1;
        #action {~^\e[0m\e[1;32m%%1(%%2)\e[0m} {
            #regexp %%1 $chapter {
                #if {%%2 == ${chapter.page}} {
                    chantpage $page;
                    #class findpage kill;
                };
                #else {
                    #math page {$page - (%%2 - ${chapter.page})};
                    page $page;
                };
            } {
                #math page $page+10;
                page $page;
            };
        };
    #class findpage close;
    page 1;
};
    
#alias chantpage {
    #class chantpage open;
    #var line {};
    #action {^==%!{\ +}{[^ ]+}%!{\ +}==$} {
        #showme line match;
        #var line ${line}%%1;
        #showme $line;
    };
    #class chantpage close;
    page %1;
    chanting %1 $line; 
};

#action {$myname拿起了%*慢慢的诵唱：} {
    #class chantpage kill;
}; 

#action {你做完了冲虚道长布置的功课，可以回去向他要奖赏了。} {
    #map run 复真观二层;
    give jing to zhike;
    #map run 武当广场;
    success-quest;
    ${songjing.after-handler};
    #delay 4 {#class songjing kill};
}
     
#class songjing close;
