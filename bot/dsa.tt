#act {你刚在三分钟内睡过一觉}
{
#delay {15} {sleep};
};

#act {你略一凝神，精神看起来好多了。} {#ticker dushu {#unticker dushu;dsaa} {3}};
#act {你现在精力充沛。} {#ticker dushu {#unticker dushu;dsaa} {3}};
#act {你一觉醒来，精神抖擞地活动了几下手脚。}
{dazuo max};

#alias cunbook
{
	#unticker dushu;
	#if {$myage<18}
	{
		put $book in bag;
	};
	#else
	{
		store $book;
	};
};


#alias {dsaa}
{
	#if {"$book"=="基础梵文"}
	{
		read shu 5;
	};
	#elseif {"$book"=="shediao"}
	{
		read zhuan 50;
	};
 	#elseif {"$book"=="tianlong"}
	{
		read tianlong 10;
	};
	#else
	{
		study $book for 50;
	};
};

#class dsa close;
